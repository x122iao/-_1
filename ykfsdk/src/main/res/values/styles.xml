<resources>

    <!--默认主题颜色 -->
    <style name="ykfsdk_KFSdkAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="ykfsdk_ykf_theme_color_default">@color/ykfsdk_ykf_color_default</item>
        <item name="ykfsdk_ykf_theme_color_default_light_1">
            @color/ykfsdk_ykf_color_default_light_1
        </item>
        <item name="ykfsdk_ykf_theme_color_bg_default">@color/ykfsdk_ykf_color_bg_default</item>
        <item name="ykfsdk_ykf_theme_text_color_default">
            @color/ykfsdk_ykf_theme_text_color_default
        </item>
        <item name="ykfsdk_ykf_theme_text_dark_default">@color/ykfsdk_ykf_theme_text_dark_default
        </item>
        <item name="ykfsdk_ykf_theme_chat_activity_default">
            @color/ykfsdk_ykf_chat_activity_default
        </item>
        <item name="ykfsdk_ykf_theme_chat_activity_bg_default">
            @color/ykfsdk_ykf_chat_activity_bg_default
        </item>
    </style>


    <!--第二套主题颜色 -->
    <style name="ykfsdk_KFSdkAppTheme1" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="ykfsdk_ykf_theme_color_default">@color/ykfsdk_ykf_color_default_1</item>
        <item name="ykfsdk_ykf_theme_color_default_light_1">
            @color/ykfsdk_ykf_color_default_1_light_1
        </item>
        <item name="ykfsdk_ykf_theme_color_bg_default">@color/ykfsdk_ykf_color_bg_default_1</item>
        <item name="ykfsdk_ykf_theme_text_color_default">
            @color/ykfsdk_ykf_theme_text_color_default_1
        </item>
        <item name="ykfsdk_ykf_theme_text_dark_default">
            @color/ykfsdk_ykf_theme_text_dark_default_1
        </item>
        <item name="ykfsdk_ykf_theme_chat_activity_default">
            @color/ykfsdk_ykf_chat_activity_default_1
        </item>
        <item name="ykfsdk_ykf_theme_chat_activity_bg_default">
            @color/ykfsdk_ykf_chat_activity_bg_default_1
        </item>
    </style>


    <style name="ykfsdk_Dialog_style" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/ykfsdk_ykf_color_default</item>
        <item name="colorPrimaryDark">@color/ykfsdk_ykf_color_default</item>
        <item name="colorAccent">@color/ykfsdk_ykf_color_default</item>
    </style>

    <!-- 末行对齐方式 -->
    <declare-styleable name="ykfsdk_AlignTextView">
        <attr name="ykfsdk_align" format="enum">
            <enum name="left" value="0" />
            <enum name="center" value="1" />
            <enum name="right" value="2" />
        </attr>
    </declare-styleable>
    <style name="ykfsdk_Theme_AudioDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>

    </style>

    <style name="ykfsdk_toolbar_theme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!--NavigationIcon的颜色-->
        <item name="colorControlNormal">?attr/ykfsdk_ykf_theme_color_default</item>
        <item name="android:textColorPrimary">@color/ykfsdk_all_black</item>
    </style>

    <!-- 标点转换 -->
    <declare-styleable name="ykfsdk_CBAlignTextView">
        <attr name="ykfsdk_punctuationConvert" format="boolean" />
    </declare-styleable>

    <style name="ykfsdk_Theme_Investigate">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ykfsdk_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <!--公共的dialog样式-->
    <style name="ykfsdk_commonDialog" parent="@android:style/Theme.Dialog">
        <!--Dialog的windowFrame框为无-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否半透明-->
        <item name="android:windowIsTranslucent">false</item>
        <!--是否显示title-->
        <item name="android:windowNoTitle">true</item>
        <!--设置dialog的背景-->
        <item name="android:background">@android:color/transparent</item>
        <!--显示区域背景是否透明-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--就是用来控制灰度的值，当为1时，界面除了我们的dialog内容是高亮显示的，dialog以外的区域是黑色的，完全看不到其他内容，系统的默认值是0.5-->
        <item name="android:backgroundDimAmount">0.5</item>
        <!--显示区域以外是否使用黑色半透明背景-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- 自定义仿IOS的ActionSheet底部Dialog的样式 ，有模糊效果 -->
    <style name="ykfsdk_ActionSheetDialogStyle" parent="@android:style/Theme.Dialog">

        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/ykfsdk_ActionSheetDialogAnimation</item>
    </style>
    <!-- pop进出动画 -->
    <style name="ykfsdk_ActionSheetDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/ykfsdk_pop_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/ykfsdk_pop_dialog_out</item>
    </style>

    <style name="ykfsdk_TabText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ykfsdk_BottomDialog" parent="@style/Theme.AppCompat.Dialog">

        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/ykfsdk_DialogAnimation</item>
    </style>

    <!-- ActionSheet进出动画 -->
    <style name="ykfsdk_DialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/ykfsdk_view_bottom_dialogin</item>
        <item name="android:windowExitAnimation">@anim/ykfsdk_view_bottom_dialogout</item>
    </style>

    <style name="ykfsdk_kf_custom_dialog2" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- Dialog的windowFrame框为无 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否漂现在activity上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 是否半透明 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 去除黑色边框的关键设置项 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 屏幕背景是否变暗 -->
        <item name="android:backgroundDimAmount">0.3</item>
    </style>

    <style name="ykfsdk_kf_pickerview_dialogAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/ykfsdk_pickerview_dialog_scale_in</item>
        <item name="android:windowExitAnimation">@anim/ykfsdk_pickerview_dialog_scale_out</item>
    </style>

    <style name="ykfsdk_kf_update_progressBar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/ykfsdk_kf_progress_horizontal</item>
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>
        <item name="android:minHeight">8dip</item>
        <item name="android:maxHeight">8dip</item>
    </style>


    <style name="ykfsdk_kf_checkbox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/ykfsdk_kf_checkbox_bg</item>
    </style>


    <!--    图片预览页面-->
    <style name="ykfsdk_Theme.ImagePreview" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>

        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>



</resources>
