<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ykfsdk_all_black"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    android:layout_weight="1"
    android:background="@color/ykfsdk_all_black"
    android:layout_width="match_parent"
    android:layout_height="0dp">
    <VideoView
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/ykf_videoview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </VideoView>

    <RelativeLayout
        android:id="@+id/rl_video_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ykfsdk_all_black">

        <ProgressBar
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"></ProgressBar>
    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_closevideo"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/ykfsdk_icon_shop_close"></ImageView>

</RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_video_path"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:text="文件存储目录:"
        android:textColor="@color/ykfsdk_all_white"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/save_file_path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="30dp"
        android:layout_below="@id/tv_tips"
        android:text=""
        android:textColor="@color/ykfsdk_all_white"
        android:textSize="10sp" />
    </LinearLayout>
</LinearLayout>