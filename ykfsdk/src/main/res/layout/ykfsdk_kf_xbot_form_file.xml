<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="@color/ykfsdk_all_white"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        >

        <TextView
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:text="你好"
            android:id="@+id/tv_title"
            android:textColor="#151515"
            android:textSize="@dimen/ykfsdk_ykf_xbot_form_title_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

        <TextView
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/tv_title"
            android:textStyle="bold"
            android:text="*"
            android:id="@+id/tv_required"
            android:textColor="@color/ykfsdk_ykf_required"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>


        <LinearLayout
            android:id="@+id/ll_xbot_file"
            android:orientation="vertical"
            android:layout_marginTop="6dp"
            android:layout_below="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </LinearLayout>

        <RelativeLayout
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/rl_xbot_form_addfile"
            android:layout_marginTop="6dp"
            android:layout_below="@+id/ll_xbot_file"
            android:background="@drawable/ykfsdk_kf_bg_xbot_tiem"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ykfsdk_ykf_xbot_form_item_height">

            <LinearLayout
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/ykfsdk_kf_ic_upfile"
                    android:layout_width="22dp"
                    android:layout_height="22dp">
                </ImageView>
                <TextView
                    android:layout_marginLeft="6dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/ykfsdk_color_333333"
                    android:textSize="15sp"
                    android:text="@string/ykfsdk_ykf_xbot_form_up_file"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>

