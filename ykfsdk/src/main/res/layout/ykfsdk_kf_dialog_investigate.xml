<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ykfsdk_all_white"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingTop="12dp"
    android:paddingRight="10dp"
    android:paddingBottom="12dp">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadeScrollbars="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp">

            <LinearLayout
                android:id="@+id/ll_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_invew_help"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="是否解决了您的问题"
                        android:textSize="15sp"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <LinearLayout
                            android:id="@+id/ll_ishelp"
                            android:layout_width="90dp"
                            android:layout_height="36dp"
                            android:background="@drawable/ykfsdk_kf_bg_coner_inves_unhelp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_ishelp"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@drawable/ykfsdk_ic_ishelp"></ImageView>

                            <TextView
                                android:id="@+id/tv_ishelp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:text="已解决"
                                android:textColor="@color/ykfsdk_color_999999"
                                android:textSize="14sp"></TextView>
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/ll_unhelp"
                            android:layout_width="90dp"
                            android:layout_height="36dp"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/ykfsdk_kf_bg_coner_inves_unhelp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_unhelp"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@drawable/ykfsdk_ic_unhelp"></ImageView>

                            <TextView
                                android:id="@+id/tv_unhelp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:text="未解决"
                                android:textColor="@color/ykfsdk_color_999999"
                                android:textSize="14sp"></TextView>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/investigate_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="@string/ykfsdk_satisfy_title"
                    android:textColor="@color/ykfsdk_color_333333"
                    android:textSize="15sp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/investigate_tag_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_head"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <!--标签模式-->
                <RadioGroup
                    android:id="@+id/investigate_rg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

                <!--星级样式-->
                <LinearLayout
                    android:id="@+id/ll_rating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:id="@+id/ll_invew_second"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/ll_second_help"
                                android:layout_width="94dp"
                                android:layout_height="38dp"
                                android:background="@drawable/ykfsdk_kf_bg_coner_inves_unhelp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/iv_second_hlep"
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:src="@drawable/ykfsdk_ic_ishelp"></ImageView>

                                <TextView
                                    android:id="@+id/tv_second_help"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="4dp"
                                    android:text="满意"
                                    android:textColor="@color/ykfsdk_color_999999"
                                    android:textSize="14sp"></TextView>
                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/ll_second_unhelp"
                                android:layout_width="94dp"
                                android:layout_height="38dp"
                                android:layout_marginLeft="20dp"
                                android:background="@drawable/ykfsdk_kf_bg_coner_inves_unhelp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/iv_second_unhelp"
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:src="@drawable/ykfsdk_ic_unhelp"></ImageView>

                                <TextView
                                    android:id="@+id/tv_second_unhelp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="4dp"
                                    android:text="不满意"
                                    android:textColor="@color/ykfsdk_color_999999"
                                    android:textSize="14sp"></TextView>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>


                    <com.m7.imkfsdk.view.rattingbar.StarRatingBar
                        android:id="@+id/ratting_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_gravity="center"
                        app:ykfsdk_defaultStar="@drawable/ykfsdk_ic_in_star"
                        app:ykfsdk_isIndicator="false"
                        app:ykfsdk_star="@drawable/ykfsdk_ic_in_star_true"
                        app:ykfsdk_starGap="10dp"
                        app:ykfsdk_starSize="28dp"
                        app:ykfsdk_starStep="1.0" />


                    <TextView
                        android:id="@+id/tv_star_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text=""
                        android:textColor="@color/ykfsdk_color_333333"
                        android:textSize="14sp" />

                </LinearLayout>


                <!--满意度二级标签-->
                <com.m7.imkfsdk.view.TagView
                    android:id="@+id/investigate_second_tg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp" />
            </LinearLayout>

            <EditText
                android:id="@+id/investigate_et"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@id/investigate_tag_ll"
                android:layout_marginTop="30dp"
                android:background="@drawable/ykfsdk_kf_investigate_edittext"
                android:gravity="top"
                android:hint="@string/ykfsdk_ykf_evaluation_content"
                android:maxLength="120"
                android:padding="10dp"
                android:textColorHint="@color/ykfsdk_ykf_light_gray"
                android:textSize="15sp" />

            <LinearLayout
                android:id="@+id/investigate_btn_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/investigate_et"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:orientation="horizontal">

                <android.widget.Button
                    android:id="@+id/investigate_save_btn"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="118dp"
                    android:layout_height="42dp"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/investigate_cancel_btn"
                    android:background="@drawable/ykfsdk_ykf_main_btn_bg"
                    android:text="@string/ykfsdk_ykf_submit_review"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />

                <android.widget.Button
                    android:id="@+id/investigate_cancel_btn"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="118dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/ykfsdk_kf_investigate_cancel_btn"
                    android:text="@string/ykfsdk_cancel"
                    android:textColor="#333333"
                    android:textSize="15sp" />
            </LinearLayout>

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>