<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/ykfsdk_bg_voice_to_text">
    <RelativeLayout
        android:minHeight="38dp"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="2dp"
            android:id="@+id/ll_text_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/tv_vototx"
                android:textSize="14sp"
                android:textColor="@color/ykfsdk_textcolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ykfsdk_ykf_voice_to_text">
            </TextView>
            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
               >
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ykfsdk_kf_ic_voiceok"
                    android:layout_width="14dp"
                    android:layout_height="14dp">
                </ImageView>
                <TextView
                    android:layout_marginLeft="4dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/ykfsdk_grey"
                    android:textSize="12sp"
                    android:text="@string/ykfsdk_ykf_convert_complete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/rl_pb"
            android:minWidth="40dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ProgressBar
                android:id="@+id/pb_voice_text"
                android:layout_width="20dp"
                android:layout_height="20dp"
                />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>