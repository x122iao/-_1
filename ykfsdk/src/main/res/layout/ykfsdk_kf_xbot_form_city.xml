<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/ykfsdk_all_white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/ykfsdk_ykf_xbot_form_title_padding">

    <TextView
        android:textStyle="bold"
        android:text="你好"
        android:id="@+id/tv_title"
        android:textColor="#151515"
        android:textSize="@dimen/ykfsdk_ykf_xbot_form_title_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>

    <TextView
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@+id/tv_title"
        android:textStyle="bold"
        android:text="*"
        android:id="@+id/tv_required"
        android:textColor="@color/ykfsdk_ykf_required"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>



    <TextView
        android:gravity="center_vertical"
        android:layout_marginTop="6dp"
        android:layout_below="@+id/tv_title"
        android:id="@+id/tv_city"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ykfsdk_ykf_xbot_form_item_height"
        android:background="@drawable/ykfsdk_kf_bg_xbot_tiem"
        android:singleLine="true"
        android:paddingLeft="16dp"
        android:paddingTop="3dp"
        android:paddingRight="16dp"
        android:paddingBottom="3dp"
        android:textColor="@color/ykfsdk_all_black"
        android:textSize="16sp" />

</RelativeLayout>