<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:background="@drawable/ykfsdk_kf_bg_xbot_tiem"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/rl_xbot_fileitem"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ykfsdk_ykf_xbot_form_item_height">

        <ImageView
            android:src="@drawable/ykfsdk_ykf_icon_file_default"
            android:layout_marginLeft="16dp"
            android:id="@+id/iv_xbot_fileitem_type"
            android:layout_centerVertical="true"
            android:layout_width="28dp"
            android:layout_height="32dp">
        </ImageView>

        <TextView
            android:layout_marginLeft="6dp"
            android:layout_marginRight="16dp"
            android:layout_toRightOf="@+id/iv_xbot_fileitem_type"
            android:textColor="@color/ykfsdk_color_333333"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:id="@+id/tv_xbot_fileitem_name"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>
    </RelativeLayout>


    <ImageView
        android:id="@+id/iv_delete_file"
        android:scaleType="fitXY"
        android:layout_marginTop="-5dp"
        android:layout_marginRight="-5dp"
        android:layout_alignTop="@+id/rl_xbot_fileitem"
        android:layout_alignRight="@+id/rl_xbot_fileitem"
        android:src="@drawable/ykfsdk_kf_ic_remove"
        android:layout_width="20dp"
        android:layout_height="20dp">

    </ImageView>

</RelativeLayout>