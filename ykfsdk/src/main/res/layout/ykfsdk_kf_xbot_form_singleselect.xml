<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="@color/ykfsdk_all_white"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/ykfsdk_ykf_xbot_form_title_padding">

        <TextView
            android:textStyle="bold"
            android:text="你好"
            android:id="@+id/tv_title"
            android:textColor="#151515"
            android:textSize="@dimen/ykfsdk_ykf_xbot_form_title_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

        <TextView
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/tv_title"
            android:textStyle="bold"
            android:text="*"
            android:id="@+id/tv_required"
            android:textColor="@color/ykfsdk_ykf_required"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>



        <com.m7.imkfsdk.view.dropdownmenu.DropDownMenu
            android:id="@+id/drop_single"
            android:layout_marginTop="6dp"
            android:layout_below="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ykfsdk_ykf_xbot_form_item_height"
            android:layout_alignParentRight="true"
            android:background="@drawable/ykfsdk_kf_bg_xbot_tiem" />
    </RelativeLayout>
</RelativeLayout>