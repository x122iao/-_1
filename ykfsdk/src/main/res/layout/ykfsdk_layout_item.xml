<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/tv_flowItem"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@drawable/ykfsdk_bg_flow_item"
        android:gravity="center"
        android:text="头等舱"
        android:layout_marginLeft="10dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="#ff333333"
        android:textSize="12sp" />

    <ImageView
        android:layout_alignBottom="@+id/tv_flowItem"
        android:layout_alignRight="@+id/tv_flowItem"
        android:src="@drawable/ykfsdk_ykf_ic_choose_flow"
        android:id="@+id/iv_choose_flow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </ImageView>

</RelativeLayout>