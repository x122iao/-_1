<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/item_view_address_lin"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/ykfsdk_all_white">

        <TextView
            android:id="@+id/item_view_address_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="50dp"
            android:textColor="@color/ykfsdk_all_black"
            android:textSize="15sp"
            tools:text="" />

        <TextView
            android:id="@+id/item_view_address_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:background="@drawable/ykfsdk_ico_make"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:background="#DDDEE3" />
    </RelativeLayout>

</LinearLayout>