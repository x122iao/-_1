<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 设置背景为圆角矩形 -->
    <solid android:color="#FFFFFF" /> <!-- 可选：设置底色 -->
    <corners android:radius="100dp" /> <!-- 设置圆角为 100dp -->

    <!-- 设置水平渐变背景 -->
    <gradient
        android:angle="0"
        android:endColor="#647AFB"
        android:startColor="#88DAF5" />
</shape>
